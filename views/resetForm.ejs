<%- include("./partials/header") %>

<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-lock"></i>  Reset password</h1>
        <%- include("./helpers/messages") %>
        <form action="/user/resetPasswordForm" method="POST">
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Enter Password Again"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              value="<%=email%>"
              hidden
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
        </form>
      </div>
    </div>
  </div>

<%- include("./partials/footer") %>