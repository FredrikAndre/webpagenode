<div class="container mt-5">
    <div class="mb-2">
        <%- include("./helpers/messages") %>
    </div>

    <form action="/todo" method="POST" class="d-flex justify-content-center">
        <input type="text" name="todo" class="form-control form-control-lg" placeholder="Enter Todo">
        <button type="submit" class="btn btn-info ml-1"><i class="todoicon fas fa-plus-square"></i></button>
        <button class="btn btn-secondary dropdown-toggle ml-1" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort Todos
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/todo/?page=<%=(todoToShow/todosPerPage)%>&&sorted=-1">Newest</a>
            <a class="dropdown-item" href="/todo/?page=<%=(todoToShow/todosPerPage)%>&&sorted=1">Oldest</a>
          </div>
    </form>

    <ul class="list-group mt-4 mb-4">
        <% todo.forEach(todos =>{ %>
            <% if (todos._id == idTask) { %>
                <li class="list-group-item d-flex justify-content-center"></li>
                <form action="/edit/todo/<%= todos._id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" method="post">
                <input type="text" class="m-2" name="todo" id="" placeholder="<%= todos.todo %>">
                <button type="submit" class="btn btn-success btn-sm "><i class="todoicon fas fa-exchange-alt"></i></button>
                <a href="/todo/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-danger btn-sm"><i class=" todoicon fas fa-undo-alt"></i></a>
                </form>
                </li>
            <% } else if (todos.done == true) { %>
                <li class="list-group-item d-flex">
                <span class="todotext crossed"><%= todos.todo %><br><span class="datetext">Added: <%= todos.date.toDateString() %> </span></span>
                <a href="/complete/todo/<%= todos.id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-success ml-auto d-flex align-items-center"><i class="todoicon fas fa-check-square"></i></a>
                <a href="/edit/todo/<%= todos.id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-warning ml-2 d-flex align-items-center"><i class="todoicon fas fa-pen-square"></i></a>
                <a href="/delete/todo/<%= todos._id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-danger ml-2 d-flex align-items-center"><i class="todoicon fas fa-minus-square"></i></a>
                </li>
            <% } else { %>
                <li class="list-group-item d-flex">
                <span class="todotext"><%= todos.todo %><br><span class="datetext ml-auto">Added: <%= todos.date.toDateString() %> </span></span>
                <a href="/complete/todo/<%= todos.id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-success ml-auto d-flex align-items-center"><i class="todoicon fas fa-check-square"></i></a>
                <a href="/edit/todo/<%= todos.id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-warning ml-2 d-flex align-items-center"><i class="todoicon fas fa-pen-square"></i></a>
                <a href="/delete/todo/<%= todos._id %>/?page=<%=(todoToShow/todosPerPage)%>&&sorted=<%=sorted%>" class="btn btn-danger ml-2 d-flex align-items-center"><i class="todoicon fas fa-minus-square"></i></a>
                </li>
            <% } %>
        <% }) %>
    </ul>

    <% if (totalDataPart > 1 ) { %>
        <div class="sorting">
        <% if (totalDataPart !== todoToShow/todosPerPage)  { %>   
            <a href="/todo/?page=<%=(todoToShow/todosPerPage)+1%>&&sorted=<%=sorted%>" class="btn btn-info">Show More</a>    
            <% } %>
    
            <% if (pages > 1) { %>
            <a href="/todo/?page=<%=(todoToShow/todosPerPage)-1%>&&sorted=<%=sorted%>" class="btn btn-info">Show Less</a>    
            <% } %>
        </div>
        <% } %>

</div>

